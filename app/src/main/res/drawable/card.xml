<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="100" android:exitFadeDuration="100">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="15dp"></corners>
            <gradient android:angle="90" android:endColor="#FFDD86" android:startColor="#FFB167" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="15dp"></corners>
            <gradient android:angle="90" android:endColor="#FFC837" android:startColor="#FF8008" />
        </shape>
    </item>
</selector>