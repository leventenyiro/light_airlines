<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/bg_login">


    <!--<ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/back"
        android:id="@+id/btnBack"/>-->

    <ImageView
        android:id="@+id/btnHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/icon_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textUdv"
        android:text="Üdv,"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/bold"
        android:textColor="@color/white"
        android:textSize="70sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textUdv"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/textAlcim"
        android:text="A Light Airlines felületén!"
        android:fontFamily="@font/regular"
        android:textColor="@color/lightGray"
        android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAlcim"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:id="@+id/textCim"
        android:text="Jelentkezz be"
        android:textSize="35sp"
        android:fontFamily="@font/bold"
        android:textColor="@color/gray" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/input"
        android:id="@+id/inputUsernameEmail"
        android:layout_below="@id/textCim"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:hint="Felhasználónév vagy E-mail"
        android:textColor="@color/gray"
        android:fontFamily="@font/regular"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"/>

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/input"
        android:id="@+id/inputPassword"
        android:layout_below="@id/inputUsernameEmail"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColor="@color/gray"
        android:fontFamily="@font/regular"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:id="@+id/btnLogin"
        android:layout_below="@id/inputPassword"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:text="Bejelentkezés"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/regular"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nincs még profilod?"
            android:fontFamily="@font/regular"
            android:textColor="@color/gray"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnReg"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:text="Regisztrálj."
            android:fontFamily="@font/bold"
            android:textColor="@color/rebelBlue"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>