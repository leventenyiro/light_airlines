<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".kezdoActivity.LoginActivity"
    android:background="@drawable/bg_login">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/loading"
        android:elevation="5dp"
        app:lottie_fileName="globeloading.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:id="@+id/btnIcon"
        android:src="@drawable/icon_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnIcon"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/textCim"
        android:text="@string/login"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:fontFamily="@font/bold" />

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textCim"
        android:layout_marginTop="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        android:id="@+id/inputUsernameEmail"
        android:background="@drawable/inputlogin"
        android:inputType="textEmailAddress"
        android:hint="@string/usernameEmail"
        android:textColorHint="@color/midGray"
        android:textColor="@color/white"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"/>

    <EditText
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inputUsernameEmail"
        android:layout_marginTop="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        android:id="@+id/inputPassword"
        android:background="@drawable/inputlogin"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:textColorHint="@color/midGray"
        android:textColor="@color/white"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp"
        android:id="@+id/btnLogin"
        android:background="@drawable/button"
        android:text="@string/login"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nincsMegProfil"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:id="@+id/btnReg"
            android:text="@string/regisztralj"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/bold" />

    </LinearLayout>

</RelativeLayout>